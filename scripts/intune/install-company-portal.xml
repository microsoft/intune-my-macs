<MacIntuneManifest>
  <Type>Script</Type>
  <Name>Company Portal Install</Name>
  <Description>Install Microsoft Company Portal via signed PKG; ensures MAU and Rosetta.</Description>
  <Platform>macOS</Platform>
  <Category>Config</Category>
  <SourceFile>scripts/intune/install-company-portal.zsh</SourceFile>
